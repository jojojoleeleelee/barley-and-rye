<style>
 .form-control {
   padding: 20px 10px;
   line-height: 28px;
 }
</style>

<h2>EDIT <%= @recipe.title %></h2>
<%= form_for @recipe do |f| %>

  <div class="form-group">
    <br>
    <%= f.text_field :title, class: "form-control" %></div>

  <div class="form-group">
    <br>
    <%= f.text_field :ingred, class: "form-control" %></div>

  <div class="form-group">
    <br>
    <%= f.text_field :description, class: "form-control" %></div>

    <div class="form-group">
      <br>
      <%= f.fields_for :recipe_ingredients do |r| %>
    <%= r.select :category, Choices['category'] %>
  <% end %></div>

  <div class="form-group">
  <br> <h3><sup> CHECK IF COOKED! </sup><sub><%= f.check_box :cooked, style: "width: 100px; height: 100px;" %></sub></h3></div>

  <div class="actions">
    <%= f.submit "UPDATE", class: "btn btn-primary" %>
  </div>

<% end %>
