<h1><em><%=  @ingred.name.upcase %></em></h1>

<h2><%= @ingred.quantity %></h2>
<h2>Date added: <%= @ingred.created_at.strftime('%m/%d/%Y') %></h2>
<br>
<br>
 <h2><small>Back to</small>
   <sup><%= link_to "PANTRY", user_ingredients_path %></sup></h2>
<br>
<br>
<div class="vertical-center">
    <div id="container">
 <p data-id="<%= @ingred.id %>" id="cancelIngred"> <%= link_to "DELETE", ingredient_path, method: "delete" %>  </p>
</div>
</div>
<div class="other-ingred">
  <h3>OTHER INGREDIENTS</h3>
  <% if @ingred.is_not_first %>
<div class="previous-ingred" style="text-align:left;">
<button id="previous-ingred" data-ingred-id="<%= @ingred.id %>" style="float:left;">PREVIOUS</button>
</div>
  <% end %>
  <% if @ingred.is_not_last %>
<div class="next-ingred" style="text-align:right;">
<button id="next-ingred" data-ingred-id="<%= @ingred.id %>" style="float:right;">NEXT</button>
</div>
  <% end %>
